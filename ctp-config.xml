<?xml version="1.0" encoding="ISO-8859-1"?>
<configuration>
    <global>
        <ds-mode>scc-simulate</ds-mode>
        <server-if>eth0</server-if>
        <client-if>eth0</client-if>
        <server-tunnel-if>eth2</server-tunnel-if>
        <client-tunnel-if>eth3</client-tunnel-if>
        <rx-err-scheme>count</rx-err-scheme>
        <rx-err-scheme>log</rx-err-scheme>
    </global>
    <modules>
        <scheduler>
            <max-user-leftover>40000</max-user-leftover>
            <max-common-leftover>480000</max-common-leftover>
        </scheduler>
    </modules>
    <topology>
        <node-b>
            <ip-address>10.0.0.1</ip-address>
            <max-bandwidth>28000000</max-bandwidth>
            <tunnel>
                <id>1</id>
                <src-ip-addr>1.2.3.4</src-ip-addr>
                <dscp>8</dscp>
                <transport>
                    <raw>8100</raw>
                    <vlan>
                        <id>100</id>
                        <priority>2</priority>
                        <cfi>1</cfi>
                    </vlan>
                    <raw>8847</raw>
                    <mpls>
                        <label>2001</label>
                        <exp>3</exp>
                        <s>0</s>
                        <ttl>255</ttl>
                    </mpls>
                    <mpls>
                        <label>4001</label>
                        <exp>1</exp>
                        <s>1</s>
                        <ttl>127</ttl>
                    </mpls>
                </transport>
                <user>
                    <ip-addr>10.0.0.20</ip-addr>
                    <src-udp-port>200</src-udp-port>
                    <dst-udp-port>400</dst-udp-port>
                    <rlc-mode>um</rlc-mode>
                    <rlc-frag-size>40</rlc-frag-size>
                    <fp-format>hs</fp-format>
                    <traffic-generator>
                        <rate>1000</rate>
                        <min-size>500</min-size>
                        <max-size>500</max-size>
                    </traffic-generator>
                    <control-generator>
                        <rate>1</rate>
                        <min-size>64</min-size>
                        <max-size>1514</max-size>
                    </control-generator>
                </user>
                <user>
                    <ip-addr>10.0.0.21</ip-addr>
                    <src-udp-port>201</src-udp-port>
                    <dst-udp-port>401</dst-udp-port>
                    <rlc-mode>am</rlc-mode>
                    <rlc-frag-size>40</rlc-frag-size>
                    <fp-format>dch</fp-format>
                </user>
                <user>
                    <ip-addr>10.0.0.22</ip-addr>
                    <src-udp-port>202</src-udp-port>
                    <dst-udp-port>402</dst-udp-port>
                    <rlc-mode>um</rlc-mode>
                    <rlc-frag-size>40</rlc-frag-size>
                </user>
                <user>
                    <ip-addr>10.0.0.23</ip-addr>
                    <src-udp-port>203</src-udp-port>
                    <dst-udp-port>403</dst-udp-port>
                    <rlc-mode>am</rlc-mode>
                    <rlc-frag-size>40</rlc-frag-size>
                </user>
            </tunnel>    
        </node-b>
        <node-b>
            <ip-address>50.50.1.2</ip-address>
            <max-bandwidth>4000000</max-bandwidth>
            <tunnel>
                <id>2</id>
                <src-ip-addr>6.6.6.6</src-ip-addr>
                <dscp>0</dscp>
                <transport>
                    <raw>0800</raw>
                </transport>
                <user repeat="50">
                    <ip-addr>[1.0.0.100]</ip-addr>
                    <src-udp-port>[300]</src-udp-port>
                    <dst-udp-port>[600]</dst-udp-port>
                    <rlc-mode>um</rlc-mode>
                    <rlc-frag-size>40</rlc-frag-size>
                </user>
            </tunnel>    
        </node-b>
    </topology>
</configuration>
